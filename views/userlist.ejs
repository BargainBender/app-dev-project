<%- include("layouts/header") -%>

<div class="container flex items-center px-8 mx-auto gap-4 mt-8 mb-4">
  <h1 class="font-bold">Total users: <%= userList.length %></h1>
  <div class="join">
    <a href="" class="btn join-item btn-neutral text-neutral-content">Relaxed</a>
    <a href="" class="btn join-item btn-">Condensed</a>
  </div>
</div>

<div class="container px-8 mx-auto">
  <div class="overflow-x-auto">
    <table class="table">
      <!-- head -->
      <thead>
        <tr>
          <th>id</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% userList.forEach((user) => { %>
          <tr class="hover">
            <th><%= user.id %></th>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.email %></td>
          
            <td class="flex join">
              <a href="/edituser/<%=user.id%>" class="join-item btn capitalize"><i class="fa-regular fa-pen-to-square"></i></a>
              <a href="/deleteuser/<%=user.id%>" class="join-item btn btn-error capitalize"><i class="fa-solid fa-trash"></i></a>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</div>
<div class="fixed bottom-0 right-0 mb-8 mr-8">
  <a href="/insertuser" class="btn capitalize"><i class="fa-solid fa-user-plus"></i>Create user</a>
</div>
<script src="/js/userlist.js"></script>

<%- include("layouts/footer") -%>